<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app 
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
  
  <display-name>Archetype Created Web Application</display-name>
  
   <servlet>
    <servlet-name>authorizationServlet</servlet-name>
    <servlet-class>carShop.AuthorizationServlet</servlet-class>
  </servlet>
    
  <servlet>
    <servlet-name>CarManegerServlet</servlet-name>
    <servlet-class>carShop.CarManegerServlet</servlet-class>
  </servlet>
  
   <servlet>
    <servlet-name>personalPage</servlet-name>
    <servlet-class>carShop.PersonalPageServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>

   <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>carShop.LogoutServlet</servlet-class>
    </servlet>
     
  <servlet>
    <servlet-name>adminServlet</servlet-name>
    <servlet-class>carShop.AdministrationServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CarManegerServlet</servlet-name>
    <url-pattern>/carManeger</url-pattern>
  </servlet-mapping>

  
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>authorizationServlet</servlet-name>
    <url-pattern>/welcomePage</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>personalPage</servlet-name>
    <url-pattern>/personalPage</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>  
    <welcome-file>guestWelcomePage.html</welcome-file>  
  </welcome-file-list> 

    <filter>
       <filter-name>SessionFilter</filter-name>
       <filter-class>carShop.SessionFilter</filter-class>
    
        <init-param>
          <param-name>avoid-urls</param-name>
          <param-value>/guestWelcomePage.html,/,/welcomePage</param-value>
        
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>
