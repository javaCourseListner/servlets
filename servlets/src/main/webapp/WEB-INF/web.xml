<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  
  <display-name>Archetype Created Web Application</display-name>
  
   <servlet>
    <servlet-name>AuthorisationServlet</servlet-name>
    <servlet-class>carShop.AuthorisationServlet</servlet-class>
  </servlet>
  
   <servlet>
    <servlet-name>ClientAccount</servlet-name>
    <servlet-class>carShop.ClientAccountServlet</servlet-class>
  </servlet>
  
  
  <servlet-mapping>
    <servlet-name>AuthorisationServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ClientAccount</servlet-name>
    <url-pattern>/clientAccount</url-pattern>
  </servlet-mapping>
  
  
  <welcome-file-list>  
    <welcome-file>/</welcome-file>  
  </welcome-file-list> 

</web-app>
